<Window x:Class="AMAM.frmAddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AMAM - Benutzer hinzufügen" WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="NoResize" WindowStyle="ToolWindow" SizeToContent="WidthAndHeight">
    <Canvas x:Name="canvas" Margin="0,0,0,0"  Width="400" Height="175">
        <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Bitte geben Sie einen Benutzernamen und ein Passwort ein um einen neuen Benutzer zu erstellen:" Canvas.Top="10" Width="380" FontSize="16" />
        <Label Content="Benutzername:" Canvas.Left="10" Canvas.Top="67"/>
        <TextBox x:Name="tbUsername" Height="23" Canvas.Left="104" TextWrapping="Wrap" Canvas.Top="70" Width="200"/>
        <PasswordBox x:Name="tbPassword" Canvas.Left="104" Canvas.Top="98" Width="200"/>
        <Label Content="Passwort:" Canvas.Left="10" Canvas.Top="93"/>
        <Button Content="Hinzufügen" Canvas.Left="315" Canvas.Top="145" Width="75" Click="AddUser" IsDefault="True"/>
        <Button Content="Abbrechen" Canvas.Left="235" Canvas.Top="145" Width="75" Click="Close" IsCancel="True"/>
    </Canvas>

</Window>
