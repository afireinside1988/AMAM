<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Amam.frmUserlist"
        Title="Benutzerliste" MinWidth="600" MinHeight="400" >
	<DockPanel LastChildFill="True" Margin="0">
		<StackPanel VerticalAlignment="Top" DockPanel.Dock="Bottom">
			<Button Content="Benutzer hinzufügen" Margin="10" Padding="5"/>
			<Button Content="Benutzer bearbeiten" Margin="0,10,10,10" Padding="5"/>
			<Button Content="Benutzer löschen" Margin="0,10,10,10" Padding="5"/>
		</StackPanel>
        
		<ListView Margin="0" MinWidth="300" DockPanel.Dock="Top"/>
	</DockPanel>
</Window>
