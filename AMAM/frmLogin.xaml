<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Data="clr-namespace:System.Data;assembly=System.Data" x:Name="frmLogin" x:Class="AMAM.MainWindow"
        Title="AMAM" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Canvas x:Name="canvas" Margin="0,0,0,0" Height="175" Width="400">
        <TextBlock Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="39" Text="Bitte loggen Sie sich mit Ihrem Benutzernamen ein:" MaxWidth="{Binding Width, ElementName=canvas}" FontSize="16" Width="374"/>
        <Label Content="Benutzername:" Canvas.Left="10" Canvas.Top="65"/>
        <Label Content="Passwort:" Canvas.Left="10" Canvas.Top="96"/>
        <PasswordBox x:Name="tbPassword" Canvas.Left="104" Canvas.Top="99" Width="174" Height="23"/>
        <Button Content="Einloggen" Canvas.Left="315" Canvas.Top="145" Width="75" IsEnabled="False" Click="LogIn" IsDefault="True"/>
        <Button Content="Beenden" Canvas.Left="235" Canvas.Top="145" Width="75" Click="Close" IsCancel="True"/>
        <ComboBox x:Name="cboUsername" Canvas.Left="104" Canvas.Top="69" Width="174" ItemsSource="{Binding}" DisplayMemberPath="username" IsReadOnly="True" />
        <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Ambulance Merseburg Apotheken Manager" Canvas.Top="10" FontSize="18"/>
    </Canvas>
</Window>
