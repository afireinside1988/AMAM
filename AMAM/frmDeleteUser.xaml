<Window x:Class="Amam.FrmDeleteUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Benutzer löschen"
        SizeToContent="WidthAndHeight"
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Canvas x:Name="Canvas" Margin="0" Height="127" Width="400">
        <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Bitte geben Sie das Passwort ein, um das Löschen des Benutzers zu bestätigen:" Canvas.Top="10" FontSize="16" Width="380"/>
        <Label Content="Passwort:" Canvas.Left="10" Canvas.Top="62" Padding="0,0,0,3"/>
        <PasswordBox x:Name="TbPassword" Canvas.Left="128" Canvas.Top="58" Width="226" Height="23" PasswordChanged="PasswordChanged"/>
        <Button x:Name="BtnDelete" Content="Benutzer löschen" Canvas.Left="288" Canvas.Top="89" Click="DeleteUser" IsDefault="True" TabIndex="3" Padding="5" IsEnabled="False"/>
        <Button Content="Abbrechen" Canvas.Left="208" Canvas.Top="89" Width="75" Click="Close" IsCancel="True" TabIndex="4" Padding="5"/>

    </Canvas>
</Window>
